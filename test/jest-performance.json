{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.performance\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/**/*.spec.ts",
    "!../src/**/*.e2e-spec.ts",
    "!../src/main.ts"
  ],
  "coverageDirectory": "../coverage/performance",
  "testTimeout": 120000,
  "setupFilesAfterEnv": ["<rootDir>/setup/performance-setup.ts"],
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "testPathIgnorePatterns": ["<rootDir>/../dist/"],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "maxWorkers": 1,
  "slowTestThreshold": 5
}
