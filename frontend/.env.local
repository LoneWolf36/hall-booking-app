# API Configuration - Updated to use frontend port for proxy
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Backend Internal API URL (for server-side calls)
API_URL=http://localhost:3000/api/v1

# App Configuration
NEXT_PUBLIC_APP_NAME="Hall Booking System"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Environment
NODE_ENV=development

# Admin Panel Configuration (Phase5)
NEXT_PUBLIC_ADMIN_PANEL_ENABLED=true
NEXT_PUBLIC_ADMIN_DASHBOARD_URL=/admin

# Theme Customization (Phase5)
NEXT_PUBLIC_THEME_CUSTOMIZATION_ENABLED=true
NEXT_PUBLIC_PRIMARY_COLOR="#4f46e5"
NEXT_PUBLIC_SECONDARY_COLOR="#10b981"

# Feature Flags
NEXT_PUBLIC_FEATURE_PAYMENT_PROCESSING=true
NEXT_PUBLIC_FEATURE_ADMIN_APPROVAL=true
NEXT_PUBLIC_FEATURE_CASH_PAYMENT=true

# Debug Settings
NEXT_PUBLIC_DEBUG_API=true
NEXT_PUBLIC_LOG_LEVEL=debug