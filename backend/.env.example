# Environment variables example file
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# Redis (for caching and idempotency)
REDIS_URL="rediss://default:token@host:6379"
UPSTASH_REDIS_REST_URL="https://your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your_token"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-token"

# Razorpay Configuration
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_secret"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# WhatsApp (360dialog or Twilio)
WHATSAPP_API_URL="https://waba.360dialog.io"
WHATSAPP_API_KEY="xxxxx"

# App Config
PORT=3000
NODE_ENV="development"
LOG_LEVEL="debug"
API_PREFIX="api/v1"
DEFAULT_TENANT_ID="tenant-1"
REDIS_TTL_DEFAULT=3600
REDIS_TTL_AVAILABILITY=300
REDIS_TTL_IDEMPOTENCY=86400

# Admin Panel Configuration (Phase5)
ADMIN_PANEL_ENABLED=true
ADMIN_EMAIL_NOTIFICATIONS=true
CASH_PAYMENT_RECORDING=true

# Notification Services (Phase5)
MSG91_API_KEY="your_msg91_key"
SENDGRID_API_KEY="your_sendgrid_key"
NOTIFICATION_SENDER_EMAIL="noreply@hallbooking.com"
NOTIFICATION_SENDER_SMS="HallBook"

# Theme Customization (Phase5)
THEME_CUSTOMIZATION_ENABLED=true
LOGO_UPLOAD_BUCKET="s3://hall-booking-logos"
CUSTOM_DOMAIN_SUPPORT=true
AWS_S3_REGION="us-east-1"
AWS_S3_ACCESS_KEY="your_aws_access_key"
AWS_S3_SECRET_KEY="your_aws_secret_key"
