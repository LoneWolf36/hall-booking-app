# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hall_booking_db"

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Alternative: Local Redis (if not using Upstash)
# REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters"

# Razorpay Configuration
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_secret"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# Application Configuration
NODE_ENV="development"
PORT=3000
LOG_LEVEL="debug"

# API Configuration
API_PREFIX="api/v1"

# Tenant Configuration (for development)
DEFAULT_TENANT_ID="tenant-1"

# Performance Configuration
REDIS_TTL_DEFAULT=3600
REDIS_TTL_AVAILABILITY=300
REDIS_TTL_IDEMPOTENCY=86400
